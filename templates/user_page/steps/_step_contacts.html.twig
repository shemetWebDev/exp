<div class="wizard-pane {{ active ? 'is-active' }}" data-step="3" role="tabpanel">
	<div class="ui-card">
		{{ form_row(form.phone,       { row_attr: { class: 'ui-field' }, attr: { class: 'ui-input', inputmode: 'tel',   placeholder: '+33612345678' } }) }}
		{{ form_row(form.email,       { row_attr: { class: 'ui-field' }, attr: { class: 'ui-input', inputmode: 'email', placeholder: 'example@domain.com' } }) }}
		{{ form_row(form.companyName, { row_attr: { class: 'ui-field' }, attr: { class: 'ui-input', placeholder: 'ООО «Пример» (необязательно)' } }) }}
		{{ form_row(form.adress,      { row_attr: { class: 'ui-field' }, attr: { class: 'ui-input', placeholder: 'Nice, 3 Chemin de la Pinède' } }) }}
	</div>
</div>
