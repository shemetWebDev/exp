{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, { label: 'Username' }) }}
        {{ form_row(registrationForm.email, { label: 'Email' }) }}
        {{ form_row(registrationForm.plainPassword, { label: 'Password' }) }}
        {{ form_row(registrationForm.city, { label: 'City (France only)' }) }}
        {{ form_row(registrationForm.code_post, { label: 'Postal Code' }) }}
        {{ form_row(registrationForm.number_phone, { label: 'Phone Number' }) }}
        {{ form_row(registrationForm.region, { label: 'Region' }) }}
        {{ form_row(registrationForm.agreeTerms, { label: 'Agree to terms' }) }}

        <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}